---
import { list as technicalList } from "#src/technical.json";
import { list as frameworkList } from "#src/framework.json";
import { list as toolList } from "#src/tool.json";
import { list as languageList } from "#src/language.json";
import { list as interestList } from "#src/interest.json";
import Section from "#components/Section/index.astro";
import DataTerm from "#components/Miscellaneous/DataTerm.astro";
import DataDescription from "#components/Miscellaneous/DataDescription.astro";
import { LIST_FORMATTER } from "#src/utils/constants.js";
---

<Section>
  <dl class="md:grid md:grid-cols-[1fr_3fr]">
    <DataTerm>Technical</DataTerm>
    <DataDescription>{LIST_FORMATTER.format(technicalList)}</DataDescription>
    <DataTerm>Framework</DataTerm>
    <DataDescription>{LIST_FORMATTER.format(frameworkList)}</DataDescription>
    <DataTerm>Tool</DataTerm>
    <DataDescription>{LIST_FORMATTER.format(toolList)}</DataDescription>
    <DataTerm>Language</DataTerm>
    <DataDescription>{LIST_FORMATTER.format(languageList)}</DataDescription>
    <DataTerm>Interest</DataTerm>
    <DataDescription>{LIST_FORMATTER.format(interestList)}</DataDescription>
  </dl>
</Section>
