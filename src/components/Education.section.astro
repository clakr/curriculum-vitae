---
import { getCollection } from "astro:content";
import Organization from "./Organization.astro";
import Section from "./Section.astro";

const educations = await getCollection("education");
---

<Section heading="Education">
  {
    educations.map((e) => (
      <article>
        <Organization organization={e.id} />
        <dl>
          {e.data.degree ? (
            <>
              <dd>Degree</dd>
              <dt>{e.data.degree}</dt>
            </>
          ) : null}
          {e.data.thesis ? (
            <>
              <dd>Thesis</dd>
              <dt>{e.data.thesis}</dt>
            </>
          ) : null}
          {e.data.awards ? (
            <>
              <dd>Awards</dd>
              <dt>{e.data.awards}</dt>
            </>
          ) : null}
        </dl>
      </article>
    ))
  }
</Section>
